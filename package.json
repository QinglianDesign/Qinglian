{
  "name": "so",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "templates/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build --no-cache --filter=!@qinglian/sql-parser",
    "build-rs": "turbo run build --no-cache --filter=@qinglian/sql-parser",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "test": "turbo run test && npm run test:all",
    "clean": "rimraf '{packages,templates}/*/{lib,node_modules,dist,target}' && rimraf node_modules",
    "test:all": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --runInBand --detectOpenHandles",
    "test:coverage": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --runInBand --detectOpenHandles --collectCoverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "init": "tsx --tsconfig ./tsconfig.json ./scripts/init-package.ts",
    "prerelease": "pnpm changeset pre enter beta",
    "prerelease:exit": "pnpm changeset pre exit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@qinglian/tsconfig": "workspace:^0.0.0",
    "@swc-node/jest": "^1.5.2",
    "@swc/core": "^1.3.4",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "cross-env": "^7.0.3",
    "eslint-config-custom": "workspace:0.0.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-extended": "^3.1.0",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "tsx": "^3.9.0",
    "turbo": "latest",
    "typescript": "^4.8.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.8.0"
}
