{
  "name": "so",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "templates/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --no-cache",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "test": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --runInBand --detectOpenHandles",
    "test:coverage": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --runInBand --detectOpenHandles --collectCoverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "init": "tsx --tsconfig ./tsconfig.json ./scripts/init-package.ts"
  },
  "devDependencies": {
    "@juzi/tsconfig": "workspace:^0.0.0",
    "@swc-node/jest": "^1.5.2",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "cross-env": "^7.0.3",
    "eslint-config-custom": "workspace:0.0.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-extended": "^3.1.0",
    "prettier": "latest",
    "tsx": "^3.9.0",
    "turbo": "latest",
    "typescript": "^4.8.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.8.0"
}